#include <unistd.h>

void	ft_is_negative(int n)
{
	char N;

	if (n<0)
	{
		N = 'N';
		write (1, &N, 1);
	}
	else
	{
		N = 'P';
		write (1, &N, 1);
	}
}

int		main()
{
	ft_is_negative(-5);
}
